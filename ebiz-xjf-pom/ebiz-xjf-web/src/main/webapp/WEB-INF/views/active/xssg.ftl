			<script>
			  var start_time= $.string2DateTime('${startTime}').getTime();
			  console.log('${startTime}');
			  var end_time=$.string2DateTime('${endTime}').getTime(); 
			  var current_time= $.string2DateTime('${currentTime}').getTime();
			  
			  var beforeBtnUrl="<@jci.domain url="/active/image/xssg/begin-btn.png"/>";
			  var buyBtnUrl="<@jci.domain url="/active/image/xssg/buy-btn.png"/>";
			  var emptyBtnUrl="<@jci.domain url="/active/image/xssg/empty-btn.png"/>"
			  var it;
			  
			  var flag=true;
			  
				$(function(){
					stateJudge();
					it= setInterval(stateJudge,1000);
				});
				//条件判断函数
				function stateJudge(){
					if($.isEmptyObject('${startTime}')||$.isEmptyObject('${endTime}')){ //时间没设置完整
								$("#dao-ji-shi-desc").html("活动已结束");
								btnStatus(emptyBtnUrl);
							}else if(current_time<start_time){
								showDaojishi(start_time,'开始');
								btnStatus(beforeBtnUrl);
							}else if(current_time==start_time){
								showDaojishi(start_time,'开始');
								btnStatus(buyBtnUrl);
								goBuy();
							}else if(current_time>start_time&&current_time<end_time){
								showDaojishi(end_time,'结束');
								btnStatus(buyBtnUrl);
								goBuy();
							}else if(current_time>=end_time){
								$("#dao-ji-shi-desc").html("活动已结束");
								btnStatus(emptyBtnUrl);
								$('#service01').off();
								$('#service02').off();
								clearInterval(it);
							}
							current_time=current_time+1000;
				}
				
				//改变按钮状态
				function btnStatus(btnUrl){
					  $(".p-tuan-text-ct img").attr('src',btnUrl);
				}
				//点击事件触发 购买链接
				function goBuy(){
					    if(flag==true){
							$('#service01').on('click',function(){
									window.location.href='https://open.weixin.qq.com/connect/oauth2/authorize?appid=wx50532a3a86aab9fd&redirect_uri=http%3A%2F%2Fwx.chexiang.com%2Fwxoauth2%2Fpage%2Fwxcomms%2Fshopping_detail%3Fid%3D9774%26channelType%3D7&response_type=code&scope=snsapi_base&state=1&connect_redirect=1#wechat_redirect'
							})
							$('#service02').on('click',function(){
								window.location.href='https://open.weixin.qq.com/connect/oauth2/authorize?appid=wx50532a3a86aab9fd&redirect_uri=http%3A%2F%2Fwx.chexiang.com%2Fwxoauth2%2Fpage%2Fwxcomms%2Fshopping_detail%3Fid%3D9776%26channelType%3D7&response_type=code&scope=snsapi_base&state=1&connect_redirect=1#wechat_redirect'
							})
							$('#service03').on('click',function(){
								window.location.href='https://open.weixin.qq.com/connect/oauth2/authorize?appid=wx50532a3a86aab9fd&redirect_uri=http%3A%2F%2Fwx.chexiang.com%2Fwxoauth2%2Fpage%2Fwxcomms%2Fshopping_detail%3Fid%3D9775%26channelType%3D7&response_type=code&scope=snsapi_base&state=1&connect_redirect=1#wechat_redirect'
							})
							flag=false;
						 }else{
						 	return false;
						 }
				}
				//纯粹的显示倒计时
				function showDaojishi(end_time,status){
						var times = window.left_times = end_time-current_time;
						var left_days = fullNumber(parseInt(times / (1000 * 60 * 60 * 24))); //剩余天数
						var left_hours= fullNumber(parseInt((times-left_days*24*60*60*1000)/(60*60*1000)));
						var left_minite= fullNumber(parseInt((times-left_days*24*60*60*1000-left_hours*60*60*1000)/(60*1000)));
						var left_second= fullNumber(parseInt((times-left_days*24*60*60*1000-left_hours*60*60*1000-left_minite*60*1000)/1000));
						
						var _html= '距<span>'+status+'</span>剩<span num="day" class="time-color">'+left_days.substr(0,1)
						+'</span><span class="time-color">'+left_days.substr(1,1)+'</span>天<span num="hour" class="time-color">'+left_hours.substr(0,1)+'</span><span class="time-color">'+left_hours.substr(1,1)
						+'</span>时<span num="minite" class="time-color">'+left_minite.substr(0,1)+'</span><span class="time-color">'+left_minite.substr(1,1)+'</span>分<span num="second" class="time-color">'
						+left_second.substr(0,1)+'</span><span class="time-color">'+left_second.substr(1,1)+'</span>秒';
						$("#dao-ji-shi-desc").html(_html);
						
				}
				
				
				function fullNumber(num){
					if(num<10){
						num= '0'+num;
					}else{
						num= ''+num;
					}
					return num;
				}
			</script>

